{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "generate": "bunx @better-auth/cli@latest generate --config ../../packages/auth/src/index.ts --output ../../packages/db/src/schema/auth.ts --yes"
  },
  "dependencies": {
    "@missingstudio/api": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "typescript": "catalog:",
    "tsdown": "^0.16.5",
    "@missingstudio/config": "workspace:*"
  }
}
